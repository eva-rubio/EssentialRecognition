<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.courses.CourseListViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#doNew" text="New" />
              <MenuItem mnemonicParsing="false" onAction="#doOpen" text="Open..." />
                  <MenuItem mnemonicParsing="false" onAction="#doSave" text="Save..." />
                  <MenuItem mnemonicParsing="false" onAction="#doExit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#doAdd" text="Add row" />
                  <MenuItem mnemonicParsing="false" onAction="#doRemove" text="Remove last row" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Run">
              <items>
                <MenuItem mnemonicParsing="false" text="Refresh Table" />
                  <MenuItem mnemonicParsing="false" text="Sort by population" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#doAbout" text="About..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="46.0" layoutY="144.0" text="Text to search:" />
            <Label layoutX="29.0" layoutY="34.0" text="Country" />
            <Label layoutX="59.0" layoutY="83.0" text="Area" />
            <TextField fx:id="textFieldCountry" layoutX="26.0" layoutY="55.0" />
            <TextField fx:id="textFieldArea" layoutX="13.0" layoutY="103.0" />
            <TextField fx:id="textFieldText" layoutX="49.0" layoutY="166.0" />
            <TextArea fx:id="textAreaResults" layoutX="4.0" layoutY="282.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" />
            <Button layoutX="51.0" layoutY="198.0" mnemonicParsing="false" onAction="#doSearchByWord" text="Search for a word" />
            <Button layoutX="41.0" layoutY="237.0" mnemonicParsing="false" onAction="#doSearchBySubstring" text="Search for a letter sequence" />
         </children>
      </AnchorPane>
   </left>
   <center>
      <TableView fx:id="courseListTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="courseIDtableColumn" prefWidth="75.0" text="Code" />
          <TableColumn fx:id="titleTableColumn" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="facultyTableColumn" prefWidth="75.0" text="Faculty" />
            <TableColumn fx:id="semesterTableColumn" prefWidth="75.0" text="Semester" />
            <TableColumn fx:id="scheduleTableColumn" prefWidth="75.0" text="Schedule" />
            <TableColumn fx:id="capacityTableColumn" prefWidth="75.0" text="Capacity" />
        </columns>
      </TableView>
   </center>
</BorderPane>
